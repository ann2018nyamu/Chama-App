<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvContributionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/invitation_eclectics_support_group"
                android:textColor="@color/colorBlackText"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvContributionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/_10_000_kes"
                android:textColor="@color/colorBlackText"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvContributionName" />

            <TextView
                android:id="@+id/tvContributionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/mandatory_contribution"
                android:textColor="@color/colorGreen"
                app:layout_constraintStart_toStartOf="@+id/tvContributionName"
                app:layout_constraintTop_toBottomOf="@+id/tvContributionName" />

            <TextView
                android:id="@+id/tvContributionDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/_09_11_2018_3_30_pm"
                android:textColor="@color/colorBlackText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvContributionType"
                app:layout_constraintTop_toBottomOf="@+id/tvContributionType" />

            <TextView
                android:id="@+id/tvContributionFrequecy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/monthly"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="@+id/tvContributionAmount"
                app:layout_constraintTop_toBottomOf="@+id/tvContributionAmount" />

            <TextView
                android:id="@+id/tvContributedNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/_12_15_participants"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="@+id/tvContributionFrequecy"
                app:layout_constraintTop_toBottomOf="@+id/tvContributionFrequecy" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".ui.onboarding.Onboarding">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fillColor="@color/colorRed"
                app:indicatorGravity="start|left|bottom"
                app:indicatorMarginHorizontal="@dimen/carousel_indicator_margin_start"
                app:indicatorMarginVertical="@dimen/carousel_indicator_margin_bottom"
                app:indicatorOrientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:pageColor="@color/colorCarouselIndicator"
                app:pageTransformInterval="1000"
                app:pageTransformer="flow"
                app:radius="@dimen/carousel_indicator_radius" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

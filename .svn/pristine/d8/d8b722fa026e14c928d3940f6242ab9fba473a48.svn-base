<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addexternalaccountsactvity"
    android:background="@drawable/white_bg"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bankCL"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/ivBank"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/ic_bank"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="Bank Account"
            android:textColor="@color/colorBlackText"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivBank"
            app:layout_constraintTop_toTopOf="@+id/ivBank" />

        <TextView
            android:id="@+id/tvBankDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Track Bank Records"
            android:textColor="@color/colorPrimaryMain"
            app:layout_constraintBottom_toBottomOf="@+id/ivBank"
            app:layout_constraintStart_toStartOf="@+id/tvBank"
            app:layout_constraintTop_toBottomOf="@+id/tvBank"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorDivider"
            app:layout_constraintEnd_toEndOf="@+id/ivBankNext"
            app:layout_constraintStart_toStartOf="@+id/tvBankDesc"
            app:layout_constraintTop_toBottomOf="@+id/tvBankDesc" />

        <ImageView
            android:id="@+id/ivBankNext"
            android:layout_width="11dp"
            android:layout_height="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_new_screen_indicator"
            app:layout_constraintBottom_toBottomOf="@+id/ivBank"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivBank" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/saccoCL"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bankCL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/ivSacco"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/ic_sacco_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSacco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/sacco_account"
            android:textColor="@color/colorBlackText"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivSacco"
            app:layout_constraintTop_toTopOf="@+id/ivSacco" />

        <TextView
            android:id="@+id/tvSaccoDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/track_savings_in_one_account"
            android:textColor="@color/colorPrimaryMain"
            app:layout_constraintBottom_toBottomOf="@+id/ivSacco"
            app:layout_constraintStart_toStartOf="@+id/tvSacco"
            app:layout_constraintTop_toBottomOf="@+id/tvSacco"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorDivider"
            app:layout_constraintEnd_toEndOf="@+id/ivSaccoNext"
            app:layout_constraintStart_toStartOf="@+id/tvSaccoDesc"
            app:layout_constraintTop_toBottomOf="@+id/tvSaccoDesc" />

        <ImageView
            android:id="@+id/ivSaccoNext"
            android:layout_width="11dp"
            android:layout_height="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_new_screen_indicator"
            app:layout_constraintBottom_toBottomOf="@+id/ivSacco"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivSacco" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mmoneyCL"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/saccoCL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/ivMobileMoney"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/ic_mobile_money"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMobileMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/mobile_money"
            android:textColor="@color/colorBlackText"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivMobileMoney"
            app:layout_constraintTop_toTopOf="@+id/ivMobileMoney" />

        <TextView
            android:id="@+id/tvMobileMoneyDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/keep_an_update_of_mobile_money"
            android:textColor="@color/colorPrimaryMain"
            app:layout_constraintBottom_toBottomOf="@+id/ivMobileMoney"
            app:layout_constraintStart_toStartOf="@+id/tvMobileMoney"
            app:layout_constraintTop_toBottomOf="@+id/tvMobileMoney"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorDivider"
            app:layout_constraintEnd_toEndOf="@+id/ivMobileMoneyNext"
            app:layout_constraintStart_toStartOf="@+id/tvMobileMoneyDesc"
            app:layout_constraintTop_toBottomOf="@+id/tvMobileMoneyDesc" />

        <ImageView
            android:id="@+id/ivMobileMoneyNext"
            android:layout_width="11dp"
            android:layout_height="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_new_screen_indicator"
            app:layout_constraintBottom_toBottomOf="@+id/ivMobileMoney"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivMobileMoney" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pettycashCL"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mmoneyCL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/ivPettyCash"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/ic_mobile_money"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPettyCash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/petty_cash"
            android:textColor="@color/colorBlackText"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivPettyCash"
            app:layout_constraintTop_toTopOf="@+id/ivPettyCash" />

        <TextView
            android:id="@+id/tvPettyCashDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/track_petty_cash_in_one_place"
            android:textColor="@color/colorPrimaryMain"
            app:layout_constraintBottom_toBottomOf="@+id/ivPettyCash"
            app:layout_constraintStart_toStartOf="@+id/tvPettyCash"
            app:layout_constraintTop_toBottomOf="@+id/tvPettyCash"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorDivider"
            app:layout_constraintEnd_toEndOf="@+id/ivPettyCashNext"
            app:layout_constraintStart_toStartOf="@+id/tvPettyCashDesc"
            app:layout_constraintTop_toBottomOf="@+id/tvPettyCashDesc" />

        <ImageView
            android:id="@+id/ivPettyCashNext"
            android:layout_width="11dp"
            android:layout_height="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_new_screen_indicator"
            app:layout_constraintBottom_toBottomOf="@+id/ivPettyCash"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivPettyCash" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/investmentCL"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pettycashCL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/ivInvestment"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/ic_mobile_money"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvInvestment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/investment"
            android:textColor="@color/colorBlackText"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivInvestment"
            app:layout_constraintTop_toTopOf="@+id/ivInvestment" />

        <TextView
            android:id="@+id/tvInvestmentDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/monitor_investment_portifolio"
            android:textColor="@color/colorPrimaryMain"
            app:layout_constraintBottom_toBottomOf="@+id/ivInvestment"
            app:layout_constraintStart_toStartOf="@+id/tvInvestment"
            app:layout_constraintTop_toBottomOf="@+id/tvInvestment"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorDivider"
            app:layout_constraintEnd_toEndOf="@+id/ivInvestmentNext"
            app:layout_constraintStart_toStartOf="@+id/tvInvestmentDesc"
            app:layout_constraintTop_toBottomOf="@+id/tvInvestmentDesc" />

        <ImageView
            android:id="@+id/ivInvestmentNext"
            android:layout_width="11dp"
            android:layout_height="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_new_screen_indicator"
            app:layout_constraintBottom_toBottomOf="@+id/ivInvestment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivInvestment" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    ADDING BANK ACCOUNT LAYOUT-->
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:id="@+id/addBankAccountCL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlSelectProvider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginRight="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSelectBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_bank"
                        android:clickable="true"
                        android:focusable="true"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlBranch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintEnd_toEndOf="@+id/tlSelectProvider"
                    app:layout_constraintStart_toStartOf="@+id/tlSelectProvider"
                    app:layout_constraintTop_toBottomOf="@+id/tlSelectProvider">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBranchName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/branch_name"
                        android:clickable="true"
                        android:focusable="true"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlAccountName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/tlBranch"
                    app:layout_constraintStart_toStartOf="@+id/tlBranch"
                    app:layout_constraintTop_toBottomOf="@+id/tlBranch">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAccountName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/account_name"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlAccountNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/tlAccountName"
                    app:layout_constraintStart_toStartOf="@+id/tlAccountName"
                    app:layout_constraintTop_toBottomOf="@+id/tlAccountName">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAccountNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/account_number"
                        android:inputType="number"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/tlAccountNumber"
                    app:layout_constraintStart_toStartOf="@+id/tlAccountNumber"
                    app:layout_constraintTop_toBottomOf="@+id/tlAccountNumber">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/current_balance"
                        android:inputType="number"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

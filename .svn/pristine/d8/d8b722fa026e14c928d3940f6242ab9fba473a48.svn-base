                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/tlSaccoAccountName"
                    app:layout_constraintStart_toStartOf="@+id/tlSaccoAccountName"
                    app:layout_constraintTop_toBottomOf="@+id/tlSaccoAccountName">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSaccoAccountNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/account_number"
                        android:inputType="number"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlSaccoAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/tlSaccoAccountNumber"
                    app:layout_constraintStart_toStartOf="@+id/tlSaccoAccountNumber"

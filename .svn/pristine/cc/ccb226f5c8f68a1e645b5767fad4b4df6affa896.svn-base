<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addexternalaccountsactvity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivBank"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_bank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Bank Account"
        android:textColor="@color/colorBlackText"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivBank"
        app:layout_constraintTop_toTopOf="@+id/ivBank" />

    <TextView
        android:id="@+id/tvBankDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Track Bank Records"
        android:textColor="@color/colorPrimaryMain"
        app:layout_constraintBottom_toBottomOf="@+id/ivBank"
        app:layout_constraintStart_toStartOf="@+id/tvBank"
        app:layout_constraintTop_toBottomOf="@+id/tvBank"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/view13"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorDivider"
        app:layout_constraintEnd_toEndOf="@+id/ivBankNext"
        app:layout_constraintStart_toStartOf="@+id/tvBankDesc"
        app:layout_constraintTop_toBottomOf="@+id/tvBankDesc" />

    <ImageView
        android:id="@+id/ivBankNext"
        android:layout_width="11dp"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_new_screen_indicator"
        app:layout_constraintBottom_toBottomOf="@+id/ivBank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivBank" />

    <ImageView
        android:id="@+id/ivSacco"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_sacco_account"
        app:layout_constraintEnd_toEndOf="@+id/ivBank"
        app:layout_constraintStart_toStartOf="@+id/ivBank"
        app:layout_constraintTop_toBottomOf="@+id/view13" />

    <View
        android:id="@+id/view14"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/ivSacconNext"
        app:layout_constraintStart_toStartOf="@+id/tvSaccoDesc"
        app:layout_constraintTop_toBottomOf="@+id/ivSacco" />

    <ImageView
        android:id="@+id/ivSacconNext"
        android:layout_width="11dp"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_new_screen_indicator"
        app:layout_constraintBottom_toBottomOf="@+id/ivSacco"
        app:layout_constraintEnd_toEndOf="@+id/ivBankNext"
        app:layout_constraintStart_toStartOf="@+id/ivBankNext"
        app:layout_constraintTop_toTopOf="@+id/ivSacco" />

    <TextView
        android:id="@+id/tvSacco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sacco_account"
        android:textColor="@color/colorBlackText"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvBankDesc"
        app:layout_constraintTop_toTopOf="@+id/ivSacco" />

    <TextView
        android:id="@+id/tvSaccoDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/track_savings_in_one_account"
        android:textColor="@color/colorPrimaryMain"
        app:layout_constraintBottom_toBottomOf="@+id/ivSacco"
        app:layout_constraintStart_toStartOf="@+id/tvSacco" />

    <ImageView
        android:id="@+id/ivMobileMoney"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_mobile_money"
        app:layout_constraintEnd_toEndOf="@+id/ivSacco"
        app:layout_constraintStart_toStartOf="@+id/ivSacco"
        app:layout_constraintTop_toBottomOf="@+id/view14" />

    <ImageView
        android:id="@+id/ivPettyCash"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_petty_cash_account"
        app:layout_constraintEnd_toEndOf="@+id/ivMobileMoney"
        app:layout_constraintStart_toStartOf="@+id/ivMobileMoney"
        app:layout_constraintTop_toBottomOf="@+id/view15" />

    <ImageView
        android:id="@+id/ivInvestment"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_investment_account"
        app:layout_constraintEnd_toEndOf="@+id/ivPettyCash"
        app:layout_constraintStart_toStartOf="@+id/ivPettyCash"
        app:layout_constraintTop_toBottomOf="@+id/view16" />

    <View
        android:id="@+id/view15"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorDivider"
        app:layout_constraintEnd_toEndOf="@+id/view14"
        app:layout_constraintStart_toStartOf="@+id/view14"
        app:layout_constraintTop_toBottomOf="@+id/ivMobileMoney" />

    <View
        android:id="@+id/view16"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorDivider"
        app:layout_constraintEnd_toEndOf="@+id/view15"
        app:layout_constraintStart_toStartOf="@+id/view15"
        app:layout_constraintTop_toBottomOf="@+id/ivPettyCash" />

    <View
        android:id="@+id/view17"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorDivider"
        app:layout_constraintEnd_toEndOf="@+id/view16"
        app:layout_constraintStart_toStartOf="@+id/view16"
        app:layout_constraintTop_toBottomOf="@+id/ivInvestment" />

    <ImageView
        android:id="@+id/ivMobileMoneyNext"
        android:layout_width="11dp"
        android:layout_height="8dp"
        android:src="@drawable/ic_new_screen_indicator"
        app:layout_constraintBottom_toBottomOf="@+id/ivMobileMoney"
        app:layout_constraintEnd_toEndOf="@+id/view14"
        app:layout_constraintTop_toTopOf="@+id/ivMobileMoney" />

    <ImageView
        android:id="@+id/ivPettyCashNext"
        android:layout_width="11dp"
        android:layout_height="8dp"
        android:src="@drawable/ic_new_screen_indicator"
        app:layout_constraintBottom_toBottomOf="@+id/ivPettyCash"
        app:layout_constraintEnd_toEndOf="@+id/view15"
        app:layout_constraintTop_toTopOf="@+id/ivPettyCash" />

    <ImageView
        android:id="@+id/ivInvestmentNext"
        android:layout_width="11dp"
        android:layout_height="8dp"
        android:src="@drawable/ic_new_screen_indicator"
        app:layout_constraintBottom_toBottomOf="@+id/ivInvestment"
        app:layout_constraintEnd_toEndOf="@+id/view16"
        app:layout_constraintTop_toTopOf="@+id/ivInvestment" />

    <TextView
        android:id="@+id/tvMobileMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mobile_money"
        android:textColor="@color/colorBlackText"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvSaccoDesc"
        app:layout_constraintTop_toTopOf="@+id/ivMobileMoney" />

    <TextView
        android:id="@+id/tvMobileMoneyDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/keep_an_update_of_mobile_money"
        android:textColor="@color/colorPrimaryMain"
        app:layout_constraintBottom_toBottomOf="@+id/ivMobileMoney"
        app:layout_constraintStart_toStartOf="@+id/tvMobileMoney"
        app:layout_constraintTop_toBottomOf="@+id/tvMobileMoney" />

    <TextView
        android:id="@+id/tvPettyCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/petty_cash"
        android:textColor="@color/colorBlackText"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvMobileMoneyDesc"
        app:layout_constraintTop_toTopOf="@+id/ivPettyCash" />

    <TextView
        android:id="@+id/tvPettyCashDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/track_petty_cash_in_one_place"
        android:textColor="@color/colorPrimaryMain"
        app:layout_constraintBottom_toBottomOf="@+id/ivPettyCash"
        app:layout_constraintStart_toStartOf="@+id/tvPettyCash"
        app:layout_constraintTop_toBottomOf="@+id/tvPettyCash" />

    <TextView
        android:id="@+id/tvInvestment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/investment"
        android:textColor="@color/colorBlackText"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvPettyCashDesc"
        app:layout_constraintTop_toTopOf="@+id/ivInvestment" />

    <TextView
        android:id="@+id/tvInvestmentDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/monitor_investment_portifolio"
        android:textColor="@color/colorPrimaryMain"
        app:layout_constraintBottom_toBottomOf="@+id/ivInvestment"
        app:layout_constraintStart_toStartOf="@+id/tvInvestment"
        app:layout_constraintTop_toBottomOf="@+id/tvInvestment" />

    <Button
        android:id="@+id/btnViewAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/blue_gradient"
        android:text="@string/view_account"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view17"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnSignUp"
        style="@style/MaterialButtonLoginRed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/red_gradient_rounded_button"
        android:text="@string/sign_up"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

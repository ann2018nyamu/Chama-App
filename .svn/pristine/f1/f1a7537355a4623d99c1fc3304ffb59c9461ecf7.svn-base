<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/walletCL"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bankCL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/ivWallet"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/ic_mobile_money"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/investment"
            android:textColor="@color/colorBlackText"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivWallet"
            app:layout_constraintTop_toTopOf="@+id/ivWallet" />

        <TextView
            android:id="@+id/tvWalletDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/monitor_investment_portifolio"
            android:textColor="@color/colorPrimaryMain"
            app:layout_constraintBottom_toBottomOf="@+id/ivWallet"
            app:layout_constraintStart_toStartOf="@+id/tvWallet"
            app:layout_constraintTop_toBottomOf="@+id/tvWallet"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorDivider"
            app:layout_constraintEnd_toEndOf="@+id/ivWalletNext"
            app:layout_constraintStart_toStartOf="@+id/tvWalletDesc"
            app:layout_constraintTop_toBottomOf="@+id/tvWalletDesc" />

        <ImageView
            android:id="@+id/ivWalletNext"
            android:layout_width="11dp"
            android:layout_height="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_new_screen_indicator"
            app:layout_constraintBottom_toBottomOf="@+id/ivWallet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivWallet" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/addPcAccountCL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlPcSelectProvider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPcApprover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:hint="Petty Cash Approver"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlPcHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/tlPcSelectProvider"
                    app:layout_constraintStart_toStartOf="@+id/tlPcSelectProvider"
                    app:layout_constraintTop_toBottomOf="@+id/tlPcSelectProvider">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPcHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Petty Cash Holder Title"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlIPcHolderName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/tlPcHolder"
                    app:layout_constraintStart_toStartOf="@+id/tlPcHolder"
                    app:layout_constraintTop_toBottomOf="@+id/tlPcHolder">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPcHolderName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Holder Name"
                        android:inputType="number"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlPcAccNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/tlIPcHolderName"
                    app:layout_constraintStart_toStartOf="@+id/tlIPcHolderName"
                    app:layout_constraintTop_toBottomOf="@+id/tlIPcHolderName">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPcAccNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Petty Cash Holder Number"
                        android:inputType="number"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlPcAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/tlPcAccNo"
                    app:layout_constraintStart_toStartOf="@+id/tlPcAccNo"
                    app:layout_constraintTop_toBottomOf="@+id/tlPcAccNo">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPcAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/current_balance"
                        android:inputType="number"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>